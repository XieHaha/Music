<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <include layout="@layout/public_title_bar" />

    <EditText
        android:id="@+id/act_add_health_info_edit"
        android:layout_width="match_parent"
        android:maxLines="5"
        android:text=""
        android:gravity="top"
        android:textSize="13sp"
        android:padding="10dp"
        android:maxLength="150"
        android:minHeight="80dp"
        android:background="@drawable/bg_edit_rect_conner"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/act_add_health_info_sure"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="确定"
        android:textColor="@color/app_white_color"
        android:gravity="center"
        android:background="@drawable/corner_main_color_full_bg"
        android:layout_height="30dp" />


</LinearLayout>