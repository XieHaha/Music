<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_login_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_bar_height"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_title_bar_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/txt_complete_title"
            android:textColor="@color/app_white_color"
            android:textSize="@dimen/app_main_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_title_bar_height"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/txt_complete_cancel"
            android:visibility="gone"
            android:textColor="@color/app_white_color"
            android:textSize="15sp" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_complete_info_headimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:src="@mipmap/icon_default_imgs"
        app:civ_border_color="#50ffffff"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_complete_info_headimg"
        android:orientation="vertical"
        android:paddingTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="@string/txt_complete_content"
            android:textColor="#ff333333"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:text="@string/txt_complete_content_hint"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingLeft="27dp"
            android:text="姓名"
            android:textColor="#ff999999"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/act_complete_info_name"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:hint="请输入您的姓名"
            android:maxLength="11"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/act_complete_info_next"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="134dp"
        android:background="@drawable/btn_main_color_selector"
        android:gravity="center"
        android:text="@string/txt_complete_next"
        android:textColor="@color/app_white_color"
        android:textSize="16sp" />

</RelativeLayout>