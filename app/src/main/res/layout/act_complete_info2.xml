<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:src="@color/app_main_color"
        android:scaleType="centerCrop"
        android:layout_height="175dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="@dimen/app_title_bar_height">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/txt_complete_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/app_main_title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="@dimen/app_title_bar_height" />

        <TextView
            android:id="@+id/act_complete_info2_back"
            android:layout_width="wrap_content"
            android:text="@string/txt_complete_back"
            android:textColor="@color/color_white"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_height="@dimen/app_title_bar_height" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="88dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="26dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/txt_complete_content_job"
                android:textSize="24sp"
                android:paddingLeft="25dp"
                android:textColor="#ff333333"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在医院"
                android:paddingLeft="26dp"
                android:layout_marginTop="18dp"
                android:textColor="#ff999999"
                android:textSize="12dp" />

            <EditText
                android:layout_width="300dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:maxLength="11"
                android:hint=""
                android:inputType="phone"
                android:layout_marginLeft="25dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在科室"
                android:paddingLeft="26dp"
                android:layout_marginTop="14dp"
                android:textColor="#ff999999"
                android:textSize="12dp" />

            <EditText
                android:layout_width="300dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:maxLength="11"
                android:hint=""
                android:inputType="phone"
                android:layout_marginLeft="25dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职称"
                android:paddingLeft="26dp"
                android:layout_marginTop="14dp"
                android:textColor="#ff999999"
                android:textSize="12dp" />

            <EditText
                android:layout_width="300dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:maxLength="11"
                android:hint=""
                android:inputType="phone"
                android:layout_marginLeft="25dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人简介"
                android:paddingLeft="26dp"
                android:layout_marginTop="14dp"
                android:textColor="#ff999999"
                android:textSize="12dp" />

            <EditText
                android:layout_width="300dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:maxLength="11"
                android:hint=""
                android:inputType="phone"
                android:layout_marginLeft="25dp"
                android:layout_height="48dp" />

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/act_complete_info2"
        android:layout_width="300dp"
        android:layout_marginTop="134dp"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/txt_complete_btn"
        android:background="@drawable/btn_main_color_selector"
        android:layout_height="46dp" />


</RelativeLayout>