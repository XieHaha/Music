<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_minor_bg">

    <include
        android:id="@+id/top_bar"
        layout="@layout/public_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:background="@color/app_white_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="15sp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/act_edit_info_headimg"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@mipmap/icon_default_imgs"
                app:civ_border_color="#50ffffff"
                app:civ_border_width="2dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:alpha="0.5"
                android:src="@mipmap/icon_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/app_main_divideline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_edit_info_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="暂无记录"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/app_main_divideline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="职称"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_edit_info_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="暂无记录"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/app_main_divideline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="科室"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_edit_info_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="暂无记录"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/app_main_divideline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="医院"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_edit_info_hospital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="暂无记录"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/app_main_divideline" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="简介"
                android:textColor="#333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/act_edit_info_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:minHeight="45dp"
                android:text="暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录暂无记录"
                android:textColor="#333333"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_main_divideline" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_white_color">

        <TextView
            android:id="@+id/act_edit_info_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/corner_main_color_full_bg"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/app_white_color"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>