<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/public_title_bar" />

    <ScrollView
        android:id="@+id/act_health_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/app_minor_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="基本信息"
                    android:textColor="@color/app_hint_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/act_health_detail_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="*为必填项"
                    android:textColor="#ff3333"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="诊断"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/txt1"
                    android:text="*"
                    android:textColor="@color/app_main_color" />

                <TextView
                    android:id="@+id/act_health_detail_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="16dp"
                    android:maxLength="40"
                    android:gravity="center_vertical"
                    android:minHeight="45dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:background="@null"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="就诊时间"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/txt2"
                    android:text="*"
                    android:textColor="@color/app_main_color" />

                <TextView
                    android:id="@+id/act_health_detail_diagnosis_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:text=""
                    android:minHeight="45dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="医院"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/act_health_detail_hopital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:text=""
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:minHeight="45dp"
                    android:maxLength="20"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="科室"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/act_health_detail_department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:maxLength="20"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:minHeight="45dp"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:paddingTop="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_case_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="主诉"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <custom.frame.widgets.textview.ExspandTextView
                    android:id="@+id/act_health_detail_case_info"
                    android:layout_below="@+id/title_case_info"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text=""></custom.frame.widgets.textview.ExspandTextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:paddingTop="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_case_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="病史"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <custom.frame.widgets.textview.ExspandTextView
                    android:id="@+id/act_health_detail_case_now"
                    android:layout_below="@+id/title_case_now"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text=""></custom.frame.widgets.textview.ExspandTextView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:paddingTop="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="体格检查"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <custom.frame.widgets.textview.ExspandTextView
                    android:id="@+id/act_health_detail_check"
                    android:layout_below="@+id/title_check"
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text=""></custom.frame.widgets.textview.ExspandTextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@color/app_minor_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="辅助检查"
                android:textColor="@color/app_hint_color"
                android:textSize="12sp" />

            <custom.frame.widgets.gridview.AutoGridView
                android:id="@+id/act_health_detail_auto_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:background="@color/app_minor_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/app_white_color"
                android:minHeight="45dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="治疗"
                    android:textColor="@color/app_hint_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/act_health_detail_deal_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:minHeight="45dp"
                    android:gravity="center_vertical"
                    android:maxLength="40"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline" />

            </RelativeLayout>

            <TextView
                android:id="@+id/act_health_detail_create_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:background="@color/app_minor_bg"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/app_hint_color"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>