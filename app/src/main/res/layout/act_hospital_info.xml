<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_minor_bg">

    <include
        android:id="@+id/top_bar"
        layout="@layout/public_title_bar" />

    <View
        android:layout_width="match_parent"
        android:background="@color/app_minor_bg"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/app_white_color"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/act_hospital_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="成都市十一医院"
            android:textColor="@color/app_main_txt_color"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_hospital_info_city"
                android:layout_width="wrap_content"
                android:textColor="@color/app_hint_color"
                android:text="成都市"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/act_hospital_info_grade"
                android:layout_width="wrap_content"
                android:textColor="@color/app_hint_color"
                android:text="三甲医院"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/app_main_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/app_main_txt_color"
                android:text="地址："
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/act_hospital_info_address"
                android:layout_width="match_parent"
                android:textColor="@color/app_minor_color"
                android:text="成都市天府大道"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_main_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/app_main_txt_color"
                android:text="电话："
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/act_hospital_info_phone"
                android:layout_width="match_parent"
                android:textColor="@color/app_minor_color"
                android:text="028-88888888"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/app_minor_bg"
        android:layout_height="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="29dp"
        android:background="@color/app_white_color"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/app_main_txt_color"
            android:text="医院介绍"
            android:gravity="center_vertical"
            android:layout_height="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_main_divide_line" />

        <TextView
            android:id="@+id/act_hospital_info_detail"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/app_minor_color"
            android:text="医院介绍..........."
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>