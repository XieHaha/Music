<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_login_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_title_bar_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/txt_title"
        android:textColor="@color/app_white_color"
        android:textSize="@dimen/app_main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:orientation="vertical"
        android:paddingTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_login"
            android:textColor="#ff333333"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_login_hint"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="手机号"
            android:textColor="#ff999999"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/act_login_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="验证码"
            android:textColor="#ff999999"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/act_login_verifycode"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="输入验证码"
                android:maxEms="10"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/act_login_verify"
                android:layout_width="93dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_color_selector"
                android:gravity="center"
                android:text="获取短信验证码"
                android:textColor="@color/btn_txt_color_selector"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingRight="28dp"
        android:paddingLeft="28dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_login_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_main_color_selector"
            android:gravity="center"
            android:text="@string/txt_title"
            android:textColor="@color/app_white_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="阅读用户协议"
            android:textColor="#ffe73278"
            android:textSize="10dp" />
    </LinearLayout>


</RelativeLayout>