<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <include
        layout="@layout/public_title_bar"
        android:id="@+id/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/title_bar"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/act_service_pack_hint_hospital_layout"
                android:layout_width="match_parent"
                android:background="@color/app_white_color"
                android:paddingTop="15dp"
                android:visibility="visible"
                android:layout_height="95dp">

                <ImageView
                    android:id="@+id/act_service_pack_hint_hospital_img"
                    android:layout_width="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/icon_hospital_defaut"
                    android:layout_height="65dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/act_service_pack_hint_hospital_img"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/act_service_pack_hint_hospital_name"
                        android:layout_width="wrap_content"
                        tools:text="医院"
                        android:textSize="17sp"
                        android:textColor="@color/app_main_txt_color"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/act_service_pack_hint_hospital_address"
                            android:layout_width="wrap_content"
                            tools:text="位置"
                            android:textSize="15sp"
                            android:textColor="@color/app_hint_color"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/act_service_pack_hint_hospital_grade"
                            android:layout_width="wrap_content"
                            tools:text="等级"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/app_hint_color"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_main_divideline"
                    android:layout_height="1px" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_below="@id/act_service_pack_hint_hospital_layout"
                android:layout_width="match_parent"
                android:background="@color/app_minor_bg"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/act_registration_goods_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_minor_bg"
                android:layout_below="@id/line"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/act_registration_goods_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="项目："
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/act_registration_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:layout_toRightOf="@id/act_registration_goods_name_txt"
                        android:gravity="center_vertical"
                        android:text="暂无记录"
                        android:textColor="@color/app_minor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/app_main_divideline" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/act_registration_goods_type_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="分类："
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/act_registration_goods_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:layout_toRightOf="@id/act_registration_goods_type_txt"
                        android:gravity="center_vertical"
                        android:text="暂无记录"
                        android:textColor="@color/app_minor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/app_main_divideline" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/act_registration_goods_price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="金额："
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/act_registration_goods_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:layout_toRightOf="@id/act_registration_goods_price_txt"
                        android:gravity="center_vertical"
                        android:text="暂无记录"
                        android:textColor="@color/app_minor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/app_main_divideline" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:minHeight="45dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/act_registration_goods_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="说明："
                        android:layout_marginTop="12dp"
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/act_registration_goods_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:minHeight="45dp"
                        android:paddingTop="12dp"
                        android:layout_toRightOf="@id/act_registration_goods_info_txt"
                        android:text="暂无记录"
                        android:textColor="@color/app_minor_color"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/act_registration_patient_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/act_registration_goods_detail_layout"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:background="@color/app_minor_bg"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/act_registration_detail_patient_name"
                    android:layout_width="match_parent"
                    tools:text="姓名"
                    android:textSize="16sp"
                    android:textColor="@color/app_main_txt_color"
                    android:paddingLeft="12dp"
                    android:paddingTop="18dp"
                    android:background="@color/app_white_color"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/act_registration_detail_patient_sex"
                        android:layout_width="wrap_content"
                        tools:text="性别"
                        android:textSize="16sp"
                        android:textColor="@color/app_main_txt_color"
                        android:paddingLeft="12dp"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_registration_detail_patient_age"
                        android:layout_width="wrap_content"
                        tools:text="年龄"
                        android:textSize="16sp"
                        android:textColor="@color/app_main_txt_color"
                        android:paddingLeft="12dp"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="诊断："
                        android:textSize="16sp"
                        android:textColor="@color/app_main_txt_color"
                        android:paddingLeft="12dp"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_registration_detail_des"
                        android:layout_width="wrap_content"
                        tools:text="描述"
                        android:textSize="16sp"
                        android:textColor="@color/app_minor_color"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/app_white_color"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="18dp"
                    android:gravity="center_vertical"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="开单医生："
                        android:textSize="16sp"
                        android:textColor="@color/app_main_txt_color"
                        android:paddingLeft="12dp"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_registration_detail_doctor_name"
                        android:layout_width="wrap_content"
                        tools:text="医生姓名"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/app_main_txt_color"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_registration_detail_doctor_hospital"
                        android:layout_width="wrap_content"
                        tools:text="医院"
                        android:textSize="12sp"
                        android:textColor="@color/app_hint_color"
                        android:background="@color/app_white_color"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_service_pack_contact_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/act_registration_patient_layout"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="match_parent"
                    android:background="@color/app_minor_bg"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="注意事项"
                    android:textSize="14sp"
                    android:textColor="@color/app_hint_color"
                    android:paddingLeft="12dp"
                    android:background="@color/app_white_color"
                    android:gravity="center_vertical"
                    android:layout_height="40dp" />

                <View
                    android:layout_width="match_parent"
                    android:background="@color/app_main_divideline"
                    android:layout_height="1px" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="18dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="负责人："
                        android:textSize="14sp"
                        android:textColor="@color/app_main_txt_color"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_service_pack_contact"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/app_minor_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="联系方式："
                        android:textSize="14sp"
                        android:textColor="@color/app_main_txt_color"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_service_pack_contact_phone"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/app_minor_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="使用须知："
                        android:textSize="14sp"
                        android:textColor="@color/app_main_txt_color"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_service_pack_useful"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/app_minor_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="18dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="注意事项："
                        android:textSize="14sp"
                        android:textColor="@color/app_main_txt_color"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/act_service_pack_attention"
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/app_minor_color"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_registration_detail_time_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/act_service_pack_contact_layout"
                android:background="@color/app_white_color"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="match_parent"
                    android:background="@color/app_minor_bg"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="预约时间"
                    android:textSize="14sp"
                    android:textColor="@color/app_hint_color"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="40dp" />

                <View
                    android:layout_width="match_parent"
                    android:background="@color/app_main_divideline"
                    android:layout_height="1px" />

                <TextView
                    android:id="@+id/act_registration_detail_time"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingTop="18dp"
                    android:textColor="@color/app_main_txt_color"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/act_registration_detail_hint"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/app_minor_color"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/act_registration_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/app_main_color"
        android:text="预约"
        android:visibility="gone"
        android:textColor="@color/app_white_color"
        android:textSize="16sp" />

</LinearLayout>