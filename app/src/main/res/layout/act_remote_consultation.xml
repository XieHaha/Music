<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/public_title_bar" />

    <RelativeLayout
        android:id="@+id/act_remote_consultation_create_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bg_create"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/act_remote_consultation_create"
            android:layout_width="wrap_content"
            android:text="创建会议"
            android:textColor="@color/app_main_txt_color"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_remote_consultation_add_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bg_add"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/act_remote_consultation_add"
            android:layout_width="wrap_content"
            android:text="加入会议"
            android:textColor="@color/app_main_txt_color"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>