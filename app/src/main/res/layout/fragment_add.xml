<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_minor_bg"
    android:orientation="vertical">

    <include layout="@layout/public_title_bar" />

    <LinearLayout
        android:id="@+id/act_meet_detail_title_layout"
        android:layout_width="match_parent"
        android:paddingTop="32dp"
        android:orientation="vertical"
        android:background="@color/app_white_color"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/act_meet_detail_title"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/act_meet_detail_time"
            android:layout_width="wrap_content"
            android:textColor="@color/app_hint_color"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30dp"
            android:background="@color/app_main_divideline" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white_color"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="房间号码:"
            android:textColor="@color/app_main_txt_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/act_meet_detail_room_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:text=""
            android:inputType="number"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:textColor="@color/app_minor_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_main_divideline" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white_color"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="参会密码:"
            android:textColor="@color/app_main_txt_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/act_meet_detail_room_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:maxLength="10"
            android:inputType="numberPassword"
            android:gravity="center_vertical"
            android:textColor="@color/app_minor_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_main_divideline" />

    </RelativeLayout>

    <TextView
        android:id="@+id/act_meet_detail_next"
        android:layout_width="175dp"
        android:background="@drawable/corner_green_full_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="立即进入"
        android:textSize="16sp"
        android:textColor="@color/app_white_color"
        android:layout_height="40dp" />

</LinearLayout>