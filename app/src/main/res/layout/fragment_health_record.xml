<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_health_record_add"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="16dp"
            android:src="@mipmap/icon_default_imgs"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="新增病例"
            android:textColor="@color/app_main_color"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <custom.frame.widgets.recyclerview.AutoLoadRecyclerView
        android:id="@+id/fragment_health_record_recycler"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

    </custom.frame.widgets.recyclerview.AutoLoadRecyclerView>

</LinearLayout>