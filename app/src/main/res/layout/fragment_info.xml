<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <custom.frame.widgets.recyclerview.AutoLoadRecyclerView
            android:id="@+id/fragment_health_record_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/fragment_info_none_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/app_white_color"
        android:layout_height="140dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_none"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_info_none_txt"
            android:layout_width="wrap_content"
            android:textColor="#E5E5E5"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_info_auth_faild"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:text="您暂无查看权限"
        android:textColor="@color/app_hint_color"
        android:textSize="14sp"
        android:background="@color/app_white_color"
        android:layout_height="140dp">

    </TextView>

</RelativeLayout>