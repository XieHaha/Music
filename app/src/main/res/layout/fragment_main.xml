<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@color/app_minor_bg"
    android:layout_height="match_parent">

    <include
        layout="@layout/public_title_bar"
        android:id="@+id/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_main_my_patient_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@color/app_white_color"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/app_main_txt_color"
                    android:text="我的患者"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:id="@+id/message_red_point2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_msg_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/app_white_color"
                        android:text="0"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/fragment_main_my_health_num"
                    android:layout_width="match_parent"
                    tools:text="1人"
                    android:gravity="right"
                    android:textColor="@color/app_hint_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@color/app_white_color"
                android:layout_height="50dp">


                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/icon_transfer"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/app_main_txt_color"
                    android:text="转诊记录"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/app_main_divideline"
                android:layout_height="1px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_main_transfer_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_transfer_status"
                        android:layout_width="wrap_content"
                        android:textColor="@color/_1F6BAC"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="转入"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_transfer_patient_name"
                        android:layout_width="wrap_content"
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="17sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        tools:text="姓名"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_transfer_patient_case"
                        android:layout_width="wrap_content"
                        android:textColor="@color/app_main_txt_color"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="病例"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_transfer_status_txt"
                        android:layout_width="wrap_content"
                        android:textColor="@color/app_hint_color"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="来自"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_transfer_doc_name"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            tools:text="病例"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/item_transfer_hospital"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_hint_color"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            tools:text="病例"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/app_main_divideline"
                        android:layout_marginTop="12dp"
                        android:layout_height="1px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_main_transfer_info_more"
                    android:layout_width="match_parent"
                    android:text="更多"
                    android:gravity="center"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_below="@id/fragment_main_transfer_layout"
                    android:background="@color/app_white_color"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:id="@+id/fragment_main_transfer_info_none_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    android:onClick="test"
                    android:background="@color/app_white_color"
                    android:layout_height="140dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:src="@mipmap/icon_none"
                        android:layout_height="73dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginTop="11dp"
                        android:textColor="#E5E5E5"
                        android:text="您还没有转诊记录哦~"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@color/app_white_color"
                android:layout_height="50dp">


                <ImageView
                    android:layout_width="20dp"
                    android:src="@mipmap/icon_order"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/app_main_txt_color"
                    android:text="开单记录"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/app_main_divideline"
                android:layout_height="1px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/fragment_main_order_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:background="@color/app_white_color"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_order_type"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="17sp"
                            android:layout_weight="1"
                            tools:text="血常规"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/item_order_status"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            tools:text="预约"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_order_patient_name"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="15sp"
                            tools:text="姓名"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/item_order_patient_sex"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            tools:text="性别"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/item_order_patient_age"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:layout_marginLeft="20dp"
                            android:textSize="15sp"
                            tools:text="年龄"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_main_txt_color"
                            android:textSize="17sp"
                            tools:text="诊断："
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/item_order_detail"
                            android:layout_width="wrap_content"
                            android:textColor="@color/app_minor_color"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            tools:text="怎么么么"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_order_hospital"
                        android:layout_width="wrap_content"
                        android:textColor="@color/app_hint_color"
                        android:textSize="12sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp"
                        tools:text="医院"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/app_main_divideline"
                        android:layout_marginTop="12dp"
                        android:layout_height="1px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_main_order_info_more"
                    android:layout_width="match_parent"
                    android:text="更多"
                    android:gravity="center"
                    android:textColor="@color/app_main_txt_color"
                    android:textSize="14sp"
                    android:layout_below="@id/fragment_main_order_layout"
                    android:visibility="gone"
                    android:background="@color/app_white_color"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:id="@+id/fragment_main_order_info_none_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    android:onClick="test1"
                    android:background="@color/app_white_color"
                    android:layout_height="140dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:src="@mipmap/icon_none"
                        android:layout_height="73dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginTop="11dp"
                        android:textColor="#E6E6E6"
                        android:text="您还没有开单记录哦~"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>