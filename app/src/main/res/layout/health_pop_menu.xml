<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:elevation="2dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="120dp"
        android:background="@color/app_main_color"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/delete"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="删除"
            android:textSize="15sp"
            android:textColor="@color/app_white_color"></TextView>

    </RelativeLayout>

    <View
        android:id="@+id/main_pop_menu_line"
        android:background="@color/app_main_divideline"
        android:layout_height="1px"
        android:visibility="gone"
        android:layout_width="120dp" />

    <RelativeLayout
        android:id="@+id/btn_scan_layout"
        android:layout_width="match_parent"
        android:background="@color/app_main_color"
        android:elevation="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/change"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="服务包"
            android:textSize="15sp"
            android:textColor="@color/app_white_color"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/main_pop_menu_line_1"
        android:background="@color/app_main_divideline"
        android:layout_height="1px"
        android:visibility="visible"
        android:layout_width="120dp" />

    <RelativeLayout
        android:id="@+id/btn_remark_layout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:visibility="visible"
        android:background="@color/app_main_color"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/remark"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="设置备注"
            android:textSize="15sp"
            android:textColor="@color/app_white_color"></TextView>
    </RelativeLayout>


</LinearLayout>