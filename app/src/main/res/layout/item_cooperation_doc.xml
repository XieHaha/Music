<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="90dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_cooperation_doc_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_default_imgs" />

        <TextView
            android:id="@+id/item_cooperation_doc_name"
            android:layout_width="wrap_content"
            android:text="姓名"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:textColor="@color/app_main_txt_color"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_cooperation_doc_hospital"
            android:layout_width="wrap_content"
            android:text="医院"
            android:textSize="12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:textColor="@color/app_hint_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>