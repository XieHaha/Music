<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="72dp">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_marginLeft="9dp"
        android:layout_centerVertical="true"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/item_msg_list_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_default_imgs"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/message_red_point"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_msg_list_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="10sp" />
        </RelativeLayout>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/item_msg_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:textSize="11sp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/corner_gray_bg"
            android:textColor="#ff666666"
            android:text="病例" />

        <LinearLayout
            android:id="@+id/item_msg_list_name_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/item_msg_list_type"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_msg_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="#ff000000"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/item_msg_list_sex"
                android:layout_width="11dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_default_imgs"
                android:layout_height="11dp" />

            <TextView
                android:id="@+id/item_msg_list_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:textColor="#ff0A85E1"
                android:layout_marginLeft="5dp"
                android:text="99"
                android:ellipsize="end" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/item_msg_list_name_layout"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_msg_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:textColor="#ff666666"
                android:layout_alignParentRight="true"
                android:text="00:01" />

            <TextView
                android:id="@+id/item_msg_list_content"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/item_msg_list_time"
                android:text="消息内容"
                android:ellipsize="end"
                android:textColor="#ff666666"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:background="@color/app_parting_minor_bg"
            android:layout_height="4px" />

    </RelativeLayout>


</LinearLayout>