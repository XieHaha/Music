<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="18dp"
    android:background="@drawable/item_bg_press"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_info_patient_case"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="16sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="病例"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/item_order_info_status"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="12dp"
            tools:text="状态"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_order_info_case_type"
        android:layout_width="wrap_content"
        android:textColor="@color/app_minor_color"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_order_info_time"
        android:layout_width="wrap_content"
        android:textColor="@color/app_hint_color"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        tools:text="时间"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="@color/app_main_divide_line"
        android:layout_marginTop="18dp"
        android:layout_height="1px" />

</LinearLayout>