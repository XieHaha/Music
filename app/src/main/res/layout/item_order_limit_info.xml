<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:background="@color/app_white_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_type"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="17sp"
            android:layout_weight="1"
            tools:text="血常规"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/message_red_point_read"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:visibility="gone"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center_vertical"></RelativeLayout>

        <TextView
            android:id="@+id/item_order_status"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="预约"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_patient_name"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="15sp"
            tools:text="姓名"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_order_patient_sex"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            tools:text="性别"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_order_patient_age"
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            tools:text="年龄"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/app_main_txt_color"
            android:textSize="17sp"
            android:text="诊断："
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_order_detail"
            android:layout_width="wrap_content"
            android:textColor="@color/app_minor_color"
            android:textSize="15sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="怎么么么"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_hospital"
            android:layout_width="wrap_content"
            android:textColor="@color/app_hint_color"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"

            android:layout_weight="1"
            tools:text="医院"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="wrap_content"
            android:textColor="@color/app_hint_color"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            tools:text="时间"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/app_main_divide_line"
        android:layout_marginTop="12dp"
        android:layout_height="1px" />

</LinearLayout>