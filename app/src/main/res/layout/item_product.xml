<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_goods_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/act_service_pack_hint_txt"
    android:background="@color/app_minor_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white_color"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/item_goods_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="项目名称："
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:layout_toRightOf="@id/item_goods_name_txt"
            android:gravity="center_vertical"
            android:text="暂无记录"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_main_divide_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white_color"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/item_goods_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="项目价格："
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:layout_toRightOf="@id/item_goods_price_txt"
            android:gravity="center_vertical"
            android:text="暂无记录"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_main_divide_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white_color"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/item_goods_type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="项目描述："
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_product_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:layout_toRightOf="@id/item_goods_type_txt"
            android:gravity="center_vertical"
            android:text="暂无记录"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_main_divide_line" />

    </RelativeLayout>

</LinearLayout>