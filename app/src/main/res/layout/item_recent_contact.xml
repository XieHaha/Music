<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="90dp"
        android:orientation="vertical"
        android:background="@drawable/corner_gray_full_bg"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_height="115dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_cooperation_doc_headimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_default_imgs" />

        <TextView
            android:id="@+id/item_cooperation_doc_name"
            android:layout_width="wrap_content"
            android:text="姓名"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/app_main_txt_color"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>