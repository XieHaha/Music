<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white_color">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/headimg_layout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/item_trans_patient_list_doctor_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default_imgs_rect" />

                <RelativeLayout
                    android:id="@+id/message_red_point"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/item_msg_list_msg_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/app_white_color"
                        android:textSize="10sp" />
                </RelativeLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/item_trans_patient_list_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/headimg_layout"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_trans_patient_list_doctor_name"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/headimg_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_trans_patient_list_doctor_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="全科"
                    android:textColor="#999999"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="转诊"
            android:textColor="#999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingRight="12dp"
            android:layout_toRightOf="@id/txt"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/patient_headimg_layout"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/item_trans_patient_list_patient_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default_imgs_rect" />

                <RelativeLayout
                    android:id="@+id/message_red_point1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/item_msg_list_msg_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/app_white_color"
                        android:textSize="10sp" />
                </RelativeLayout>
            </FrameLayout>


            <TextView
                android:id="@+id/item_trans_patient_list_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/patient_headimg_layout"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="#ff000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_patient_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout"
        android:padding="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/item_patient_list_refuse"
            android:layout_width="51dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_main_color_bg"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/app_main_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_patient_list_agree"
            android:layout_width="51dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/corner_main_color_full_bg"
            android:gravity="center"
            android:text="通过"
            android:textColor="@color/app_white_color"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_parting_minor_bg" />

</RelativeLayout>