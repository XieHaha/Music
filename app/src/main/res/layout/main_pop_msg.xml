<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:elevation="2dp"
    android:background="@drawable/corner_white_full_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="120dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/main_pop_msg_info"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="个人信息"
            android:textSize="15sp"
            android:textColor="#333333"></TextView>

        <View
            android:id="@+id/main_pop_menu_line"
            android:background="@color/app_main_divideline"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_width="120dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/prescription_layout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/main_pop_msg_prescription"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="处方"
            android:textSize="15sp"
            android:textColor="#333333"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/main_pop_menu_line_1"
        android:background="@color/app_main_divideline"
        android:layout_height="1px"
        android:layout_width="120dp" />

    <RelativeLayout
        android:id="@+id/check_layout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/main_pop_msg_check"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="检查"
            android:textSize="15sp"
            android:textColor="#333333"></TextView>

        <View
            android:id="@+id/main_pop_menu_line_2"
            android:background="@color/app_main_divideline"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_width="120dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/health_check_layout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/main_pop_msg_health_check"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="体检"
            android:textSize="15sp"
            android:textColor="#333333"></TextView>

        <View
            android:id="@+id/main_pop_menu_line_3"
            android:background="@color/app_main_divideline"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_width="120dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/chemical_layout"
        android:layout_width="match_parent"
        android:elevation="2dp"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/main_pop_msg_chemical"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="化验"
            android:textSize="15sp"
            android:textColor="#333333"></TextView>
    </RelativeLayout>


</LinearLayout>