<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="126dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:layout_width="126dp"-->
    <!--android:background="@drawable/icon_menu_bg"-->
    <!--android:layout_height="115dp"></LinearLayout>-->

    <LinearLayout
        android:layout_width="120dp"
        android:orientation="vertical"
        android:background="@drawable/icon_menu_bg"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_pop_msg_info"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_width="120dp"
            android:gravity="center"
            android:text="个人信息"
            android:textSize="15sp"
            android:textColor="@color/app_main_color"></TextView>

        <View
            android:layout_width="116dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/app_main_divideline"
            android:visibility="gone"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/main_pop_msg_service"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:gravity="center"
            android:text="服务包"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="@color/app_main_color"></TextView>

    </LinearLayout>

</RelativeLayout>