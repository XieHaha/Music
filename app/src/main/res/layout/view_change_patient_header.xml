<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_exchange_patient_layout"
    android:layout_width="match_parent"
    android:background="@color/app_white_color"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:background="@color/app_minor_bg"-->
    <!--android:layout_height="10dp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_header_hint_txt"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:text="我的转诊申请"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/app_main_color"
            android:layout_height="46dp" />


        <RelativeLayout
            android:id="@+id/message_red_point2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="38dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/app_white_color"
                android:text="0"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:alpha="0.5"
            android:src="@mipmap/icon_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/app_minor_bg"
        android:layout_height="10dp" />

</LinearLayout>