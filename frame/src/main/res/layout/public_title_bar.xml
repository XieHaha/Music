<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_main_color"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/app_main_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_bar_height">

        <ImageView
            android:id="@+id/public_title_bar_back"
            android:layout_width="48dp"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/public_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="标题"
            android:textColor="@color/app_white_color"
            android:textSize="@dimen/app_main_title" />

        <ImageView
            android:id="@+id/public_title_bar_more"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_edit" />

        <ImageView
            android:id="@+id/public_title_bar_more_two"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_more"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/public_title_bar_more_three"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/icon_add_white"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/public_title_bar_more_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            tools:text="更多"
            android:minWidth="48dp"
            android:visibility="visible"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_white_color"
            android:textSize="@dimen/app_txt_minor" />
    </RelativeLayout>
</LinearLayout>